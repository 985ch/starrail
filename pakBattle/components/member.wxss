@import "../../components/common.wxss";
.memberBox {
  width: 180rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid lightgray;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}
.memberIcon {
  width: 120rpx;
  height:  120rpx;
  margin-top: 8rpx;
}
.textBox {
  width: 99%;
  background-color: white;
  text-align: center;
  border-radius: 8rpx;
}
.selected {
  border: 1rpx solid red;
}
.bm {
  width: 90%;
  margin-bottom: 5rpx;
}
.dead {
  filter: grayscale(100%);
  background-color: lightgray;
}
.state {
  width: 150rpx;
  text-align: center;
  color: red;
  padding: 1rpx 5rpx;
  background-color: white;
  transform: rotate(45deg) translateX(45rpx) translateY(-20rpx);
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  font-size: 22rpx;
}
.action {
  background-color: coral;
  border-color: coral;
}