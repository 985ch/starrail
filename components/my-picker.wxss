.top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 36px;
  border-bottom: 1rpx solid #d3cfcf;
}

.top-text {
  font-size: 20px;
  width: 80px;
  height: 24px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.item {
  width: 100%;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
  font-size: 18px;
}

.content {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: white;
}