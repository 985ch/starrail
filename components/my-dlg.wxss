@import "./common.wxss";
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
}
.container{
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
}
.dlg-box{
  width: 700rpx;
  background-color: white;
}
.title {
  font-size: 32rpx;
  border-bottom: 1rpx solid lightgray;
  padding: 5rpx 10rpx;
}
.slot-box {
  max-height: 900rpx;
  min-height: 500rpx;
}
.footer {
  width: 100%;
  display: flex;
  justify-content: row;
  border-top: 1rpx solid lightgray;
  padding: 5rpx;
}
.dlgBtn {
  flex-grow: 1;
}