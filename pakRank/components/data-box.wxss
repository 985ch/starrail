@import "../../components/common.wxss";
.charBox {
  width: 25%;
  text-align: center;
}
.iconBox {
  margin: 4rpx;
  position: relative;
  display: inline-block;
  vertical-align: bottom;
  width: 100rpx;
  height: 100rpx;
  border-radius: 5rpx;
  overflow: hidden;
}
.icon {
  width: 100%;
  height: 100%;
}
.soul {
  position: absolute;
  top: 0;
  right: 0;
  background-color: lightgray;
  border-bottom-left-radius: 10rpx;
  padding: 1rpx 12rpx;
  font-size: 24rpx;
  opacity: 0.8;
}
.intro {
  margin: 2rpx 0;
  font-size: 18rpx;
}
.title {
  font-size: 28rpx;
  margin: 4rpx 5rpx;
}
.btn {
  width: 80rpx;
}
.rSpace {
  margin-right: 5rpx;
}
.noWeapon {
  color: gray;
}
.tip {
  font-size: 22rpx;
  margin-left: 5rpx;
  color: darkgray;
}